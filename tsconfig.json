{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "paths": {
      "@packages/*": ["./packages/*"],
    }
  },
  "include": [
    "./packages/**/*", "sandbox", "scripts"
  ],
  "exclude": [
    "**/*/node_modules",
    "**/*/dist",
    "**/*.test.tsx",
    "vite.config.js",
  ],
}