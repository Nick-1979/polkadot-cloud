{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "paths": {
      "packages": ["./packages"],
    }
  },
  "include": [
    "./packages/**/*", "sandbox",
  ],
  "exclude": [
    "**/*/node_modules",
    "**/*/dist",
    "**/*.test.tsx"
  ],
}