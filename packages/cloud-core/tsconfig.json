{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declarationDir": "dist/utils",
    "rootDir": "./lib/utils",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": ["./lib/utils/*"],
}
