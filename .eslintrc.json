{
  "root": true,
  "env": {
    "es2021": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "./tsconfig.json",
          "packages/*/tsconfig.json",
          "sandbox/tsconfig.json"
        ]
      }
    }
  },
  "extends": [
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
